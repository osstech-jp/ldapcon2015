% define beamertemplate
\defbeamertemplate{title page}{osstech}{
  \AddToShipoutPicture*{
    \put(20,30){
      \includegraphics[height=3cm]{../figure/osstech_logo.eps}
    }
  }
  \vspace{2em}
  {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par}
  \vspace{6em}
  
  \begin{flushright}
    \usebeamerfont{small}{
      \insertinstitute\par
      \insertauthor\par
      \insertdate\par
    }
  \end{flushright}
}

\defbeamertemplate{headline}{osstech}{
  \ifnum\c@framenumber=1
  % title page
  \else
  \begin{beamercolorbox}[colsep=1pt]{separation line}
  \end{beamercolorbox}
  \begin{beamercolorbox}[ht=13pt,dp=4pt,
      leftskip=.2cm,rightskip=.2cm plus1fil]{head}
    \leavevmode{
      \usebeamerfont{text in head}
      \usebeamercolor[fg]{text in head}
      \insertshorttitle
    }
    \hfill
    \raisebox{-3.5pt}{
      \hbox{
        \includegraphics[height=16pt,keepaspectratio]{../figure/osstech_header.eps}
      }
    }
  \end{beamercolorbox}
  \begin{beamercolorbox}[colsep=1pt]{separation line}
  \end{beamercolorbox}
  \fi
}

\defbeamertemplate*{footline}{osstech}{
  \begin{beamercolorbox}[colsep=0.5pt]{separation line}
  \end{beamercolorbox}
  \vskip 1pt
  \begin{beamercolorbox}[ht=10pt,dp=4pt,leftskip=.3cm,rightskip=.3cm plus1fil]{foot}
    \leavevmode
        {\usebeamerfont{text in foot}\insertshortinstitute}
        {\hfill}
        {\usebeamerfont{text in foot}\insertpagenumber}
  \end{beamercolorbox}
}

